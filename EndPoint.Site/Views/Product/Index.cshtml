@addTagHelper *, LazZiya.TagHelpers
@using Arshia_Store.Application.Serivces.Products.Queries.GetProductsForSite
@model ResultProductForSiteDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int Page=1;
    int PageSize = 15;
    int.TryParse(Context.Request.Query["Page"], out Page);
    int.TryParse(Context.Request.Query["PageSize"], out PageSize);

    if(Page == 0)
        Page = 1;

    if(PageSize == 0)
        PageSize = 5;
}

<div class="col-lg-12 col-md-12 col-xs-12 pl">
        <div class="shop-archive-content mt-3 d-block">
            <div class="archive-header">
                <h2 class="archive-header-title">آرشیو محصولات</h2>
                <div class="sort-tabs mt-0 d-inline-block pr">
                    <h4>مرتب&zwnj;سازی بر اساس :</h4>
                </div>
                <div class="nav-sort-tabs-res">
                    <ul class="nav sort-tabs-options" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link"
                            href="~/product?SearchKey=@(Context.Request.Query["SearchKey"])&CategoryId=@(Context.Request.Query["CategoryId"])&ordering=1"
                            role="tab"
                            aria-controls="Most-visited"
                            aria-selected="false">پربازدیدترین</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                            href="~/product?SearchKey=@(Context.Request.Query["SearchKey"])&CategoryId=@(Context.Request.Query["CategoryId"])&ordering=2" 
                            role="tab" 
                            aria-controls="Bestselling" 
                            aria-selected="false">پرفروش&zwnj;ترین&zwnj;</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                            href="~/product?SearchKey=@(Context.Request.Query["SearchKey"])&CategoryId=@(Context.Request.Query["CategoryId"])&ordering=3" 
                            role="tab" 
                            aria-controls="Most-Popular" 
                            aria-selected="false">محبوب&zwnj;ترین</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                            href="~/product?SearchKey=@(Context.Request.Query["SearchKey"])&CategoryId=@(Context.Request.Query["CategoryId"])&ordering=4" 
                            role="tab" 
                            aria-controls="newest" 
                            aria-selected="false">جدیدترین</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                            href="~/product?SearchKey=@(Context.Request.Query["SearchKey"])&CategoryId=@(Context.Request.Query["CategoryId"])&ordering=5" 
                            role="tab" 
                            aria-controls="cheapest" 
                            aria-selected="false">ارزان&zwnj;ترین</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" 
                            href="~/product?SearchKey=@(Context.Request.Query["SearchKey"])&CategoryId=@(Context.Request.Query["CategoryId"])&ordering=6" 
                            role="tab" 
                            aria-controls="most-expensive" 
                            aria-selected="false">گران&zwnj;ترین</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-items">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="Most-visited" role="tabpanel" aria-labelledby="Most-visited-tab">
                        <div class="row">
                            @foreach (var item in Model.Products)
                            {
                                <div class="col-lg-3 col-md-3 col-xs-12 order-1 d-block mb-3">
                                    <section class="product-box product product-type-simple">
                                        <div class="thumb">
                                            <a asp-action="Detail" asp-controller="Product" asp-route-ProductId=@item.Id class="d-block">
                                                <div class="product-rate">
                                                    @for (int i = 1; i <= item.Star; i++)
                                                    {
                                                        <i class="fa fa-star active"></i>
                                                    }
                                                    @for (int i = 1; i <= (5 - item.Star); i++)
                                                    {
                                                        <i class="fa fa-star"></i>
                                                    }
                                                </div>
                                                @if(item.ImageSrc != string.Empty)
                                                {
                                                    <img width="400" height="300" src="~/@item.ImageSrc">
                                                }
                                                else
                                                {
                                                    <img width="400" height="300" src="~/images/ProductImages/nofound.jpg">
                                                }
                                            </a>
                                        </div>
                                        <div class="title">
                                            <a asp-action="Detail" asp-controller="Product" asp-route-ProductId=@item.Id>  @item.Title</a>
                                        </div>
                                        <div class="price">
                                            <span class="amount">
                                                @item.Price.ToString("n0")
                                                <span>تومان</span>
                                            </span>
                                        </div>
                                    </section>
                                </div>
                            }   
                        </div>
                    </div>
                </div>
            </div>
            <div class="pagination-product">
                <nav aria-label="Page navigation example">
                    <paging total-records="Model.TotalRow"
                            page-no="@Page"
                            page-size="@PageSize"
                            show-prev-next="true"
                            show-total-pages="false"
                            show-total-records="false"
                            show-page-size-nav="true"
                            show-first-numbered-page="true"
                            show-last-numbered-page="true"
                            query-string-key-page-no="Page"
                            query-string-key-page-size="PageSize"
                            query-string-value="@(Context.Request.QueryString.Value)" 
                            gap-size="2">
                    </paging>
                </nav>
            </div>
        </div>
    </div>


